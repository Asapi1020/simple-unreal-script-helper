						"switch",
						"while"
					]
				},
				"unrealscript.metadataTags": {
					"type": "array",
					"description": "List of UnrealScript metadata tags.",
					"item": {
						"type": "string"
					},
					"default": [
						"ToolTip=",
						"DisplayName=",
						"ClampMin=",
						"ClampMax=",
						"UIMin=",
						"UIMax=",
						"ArrayClamp=",
